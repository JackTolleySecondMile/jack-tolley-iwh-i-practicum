doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 8px 12px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
        font-weight: bold;
      }
      tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      tr:hover {
        background-color: #f1f1f1;
      }
      .container {
        margin: 0 auto;
        padding: 20px;
        max-width: 1200px;
      }
  body
    div.container
      h1= title
      
      p
        a(href="/update-cobj") Add to this table
      if records && records.length > 0
        table
          thead
            tr
              each val, key in records[0].properties
                th= key
              th Actions
          tbody
            each record in records
              tr
                each val, key in record.properties
                  td= val
                td
                  a(href=`/edit/${record.id}`) Edit
                  |  | 
                  a(href=`/delete/${record.id}` onclick="return confirm('Are you sure you want to delete this item?')") Delete
      else
        p No records found.
      
